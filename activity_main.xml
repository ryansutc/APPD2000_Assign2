<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.w0143446.quizbuilder.MainActivity">

    <!--https://developer.android.com/guide/topics/ui/layout/relative.html !-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvQCount_text"
        android:id="@+id/tvQCount"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvScore_text"
        android:id="@+id/tvScore"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvQCount"
        android:layout_gravity="left|top"
        android:id="@+id/tableLayout1">

       <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_column="0"
                android:id="@+id/imageView"
                android:layout_gravity="left|top"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/txtTerm"
                android:id="@+id/tvTerm"
                android:layout_column="1"
                android:layout_span="2"/>

       </TableRow>
       <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

           <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_column="0"
                android:src="@drawable/ic_thumbsup" />

           <ImageView
                android:layout_column="1"
                android:id="@+id/imgFeedback"
                android:layout_gravity="left|top"
                android:src="@drawable/ic_thumbsup" />

           <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtFeedbackGood"
                android:id="@+id/tvFeedback"
                android:layout_column="2"/>
       </TableRow>
   </TableLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:id="@+id/tableLayout2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView android:id="@+id/imgOptionA"
                android:layout_column="0"
                android:src="@drawable/ic_done_black_24dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rdoOptionA"
                android:layout_column="2"
                android:text="@string/txtOptionA" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/txtOptionA"
                android:id="@+id/txtOptionA"
                android:layout_column="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/txtAnswerA"
                android:id="@+id/txtAnswerA"
                android:layout_column="4" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView android:id="@+id/imgOptionB"
                android:layout_column="0"
                android:src="@drawable/ic_done_black_24dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rdoOptionB"
                android:layout_column="2"
                android:text="@string/txtOptionB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/txtOptionB"
                android:id="@+id/txtOptionB"
                android:layout_column="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/txtAnswerB"
                android:id="@+id/txtAnswerB"
                android:layout_column="4" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView android:id="@+id/imgOptionC"
                android:layout_column="0"
                android:src="@drawable/ic_done_black_24dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rdoOptionC"
                android:layout_column="2"
                android:text="@string/txtOptionC" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/txtOptionC"
                android:id="@+id/txtOptionC"
                android:layout_column="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/txtAnswerC"
                android:id="@+id/txtAnswerC"
                android:layout_column="4" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView android:id="@+id/imgOptionD"
                android:layout_column="0"
                android:src="@drawable/ic_done_black_24dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rdoOptionD"
                android:layout_column="2"
                android:text="@string/txtOptionD" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/txtOptionD"
                android:id="@+id/txtOptionD"
                android:layout_column="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/txtAnswerD"
                android:id="@+id/txtAnswerD"
                android:layout_column="4" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btnNext_text"
                android:id="@+id/btnNext"
                android:layout_column="0"
                android:layout_span="5"
                />
        </TableRow>


    </TableLayout>




</RelativeLayout>
